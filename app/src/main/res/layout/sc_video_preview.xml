<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sc_background"
    >

    <VideoView
        android:id="@+id/sc_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/sc_btn_accept"
            style="?attr/scButtonAcceptStyle"
            android:src="@drawable/sc_ic_action_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/sc_btn_reject"
            style="?attr/scButtonRejectStyle"
            android:src="@drawable/sc_ic_action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>